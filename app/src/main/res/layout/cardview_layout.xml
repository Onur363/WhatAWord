<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtId"
                android:visibility="invisible"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/actionbarrenk"
                android:id="@+id/textEn"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/actionbarrenk"
                android:id="@+id/textTr"
                android:textSize="12dp"
                android:layout_marginLeft="210dp"
                android:layout_toRightOf="@+id/txtEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView

                android:id="@+id/txtCen"
                android:textSize="11dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/txtEn"
                android:layout_marginTop="30dp"
                android:layout_alignLeft="@+id/txtEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/txtCtr"
                android:textSize="10dp"
                android:layout_below="@+id/txtCen"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/txtCen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>